<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallisonbackground"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".WallisonScreen">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="180dp"
        android:layout_height="190dp"
        app:cardCornerRadius="50dp"

        app:srcCompat="@drawable/wallison" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:shadowColor="@color/cardview_dark_background"
        android:text="Oi, meu nome é Wallison William, tenho 20 anos de idade, e estou cursando Ciência da Computação pela Universidade Católica de Pernambuco, além disso, costumo fazer cursos focados na área da programação"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textStyle="normal">

    </TextView>


    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/cardview_dark_background"
        android:gravity="center_horizontal"
        android:padding="4dp"
        android:text="Tecnologias"
        android:textColor="@color/cardview_light_background" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="51dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/html" />

        <ImageView
            android:layout_width="51dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/css" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="51dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/js" />

        <ImageView
            android:layout_width="63dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/java" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:orientation="horizontal">
        android:layout_marginTop="10dp"

        <TextView

            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="No meu tempo livro gosto de jogar video game, assistir séries, animes e filmes"
            android:textColor="@color/cardview_light_background" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:orientation="horizontal">

    </LinearLayout>

    <ImageView
        android:layout_width="98dp"
        android:layout_height="85dp"
        android:gravity="center_horizontal"
        app:srcCompat="@drawable/franguinho" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="Tenho uma calopsita que chamo de franguinho (eu não sei o sexo dela ainda), sendo assim, um bom nome"
        android:textColor="@color/cardview_light_background" />


</LinearLayout>