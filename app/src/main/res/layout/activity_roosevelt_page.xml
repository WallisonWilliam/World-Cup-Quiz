<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".RooseveltActivity">


    <ImageView
        android:id="@+id/roosevelt_info2"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:elevation="40dp"
        android:src="@drawable/roo" />

    <TextView
        android:layout_width="398dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:shadowColor="@color/cardview_dark_background"
        android:text="Me chamo Roosevelt e sou estagiario de redes na Vectra Consultoria e Serviços. Moro no outro lado do mundo (Itamaracá), mas sempre sou pontual, sendo essa uma das minhas qualidades."
        android:textColor="@color/white"
        android:textStyle="bold">

    </TextView>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/futebolicon" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:shadowColor="@color/cardview_dark_background"
        android:text="FUTEBOL É VIDA !!! VAI BRASIL, O HEXA É NOSSO !!!!"
        android:textColor="@color/white"
        android:textStyle="bold">

    </TextView>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/skillsroosevelt" />


</LinearLayout>